    new_disk: '/dev/sdb'        # set to new disk being added to volume group
    create_vgname: 'nfs-vg'     # set to volume group name to create
    create_lvname: 'nfs-lv'     # set to logical volume name to create
    create_lvsize: '100%FREE'   # set to logical volume size to create - (10G) - would create new lvm with 10Gigabytes
    filesystem: 'ext4'          # set to filesystem type to format new logical volume with ( ext3, ext4, xfs, etc. )
